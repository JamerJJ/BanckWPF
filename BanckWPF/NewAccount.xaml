            Height="30" 
            Margin="395,507,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="270" 
            MinWidth="120" 
            Background="#FFEDFF7A" 
            TextAlignment="Left"
            VerticalContentAlignment="Center"              
            Foreground="Gray"
            FontSize="20" 
            GotFocus="txtInicialBal_GotFocus"/>

        <Label Content="Overdraft Limit" 
            HorizontalAlignment="Left" 
            Margin="395,542,0,0" 
