               />

        <Label Content="Address 2" 
            HorizontalAlignment="Left" 
            Margin="395,296,0,0" 
            VerticalAlignment="Top" 
            Background="Transparent" 
            Foreground="White"
            FontSize="20"
               />

        <Label Content="County" 
            HorizontalAlignment="Left" 
            Margin="395,383,0,0" 
            VerticalAlignment="Top" 
            Background="Transparent" 
            Foreground="White"
            FontSize="20"
               />

        <Label Content="Inicial Balance" 
            HorizontalAlignment="Left" 
            Margin="395,470,0,0" 
            VerticalAlignment="Top" 
            Background="Transparent" 
            Foreground="White"
            FontSize="20"
               />

        <Label Content="Email" 
            HorizontalAlignment="Left" 
            Margin="35,216,0,0" 
            VerticalAlignment="Top" 
            Background="Transparent" 
            Foreground="White"
            FontSize="20"
               />

        <Label Content="Address 1" 
            HorizontalAlignment="Left" 
            Margin="35,296,0,0" 
            VerticalAlignment="Top" 
            Background="Transparent" 
            Foreground="White"
            FontSize="20"
               />

        <Label Content="City" 
            HorizontalAlignment="Left" 
            Margin="35,383,0,0" 
            VerticalAlignment="Top" 
            Background="Transparent" 
            Foreground="White"
            FontSize="20"
               />

        <Label Content="Account Type" 
            HorizontalAlignment="Left" 
            Margin="35,470,0,0" 
            VerticalAlignment="Top" 
            Background="Transparent" 
            Foreground="White"
            FontSize="20"
               />

        <TextBox x:Name="txtCity" 
            HorizontalAlignment="Left" 
            Height="30" 
            Margin="35,420,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="270" 
            MinWidth="120" 
            Background="#FFEDFF7A" 
            TextAlignment="Left"
            VerticalContentAlignment="Center"              
            Foreground="Gray"
            FontSize="20"/>

        <ComboBox x:Name="cboCy" 
            HorizontalAlignment="Left" 
            Height="30" 
            Margin="395,420,0,0" 
            VerticalAlignment="Top" 
            Width="270" 
            MinWidth="120" 
            Background="#FFEDFF7A" 
            VerticalContentAlignment="Center"              
            Foreground="Gray"
            FontSize="20" Loaded="cboCy_Loaded"/>

        <RadioButton x:Name="rdoCurrent"
                     Content="Current" 
                     HorizontalAlignment="Left" 
                     Margin="35,400,0,0" 
                     VerticalAlignment="Center"
                     Foreground="White"
                     FontSize="20" 
                     Height="30" IsChecked="True"
                     />

        <RadioButton x:Name="rdoSavings"
                     Content="Savings" 
                     HorizontalAlignment="Left" 
                     Margin="150,400,0,0" 
                     VerticalAlignment="Center"
                     Foreground="White"
                     FontSize="20" 
                     Height="30"
                     />

        <Button x:Name="btnNewAccount" 
                Content="Create Acc" 
                HorizontalAlignment="Left" 
                Margin="83,570,0,0" 
                VerticalAlignment="Top" 
                Width="120" 
                Background="#FF282814" 
                Foreground="White" 
                Height="60"
                FontSize="20" 
                Style="{DynamicResource RoundedButtonStyle}" Click="btnNewAccount_Click" 
                />




    </Grid>

</Window>
